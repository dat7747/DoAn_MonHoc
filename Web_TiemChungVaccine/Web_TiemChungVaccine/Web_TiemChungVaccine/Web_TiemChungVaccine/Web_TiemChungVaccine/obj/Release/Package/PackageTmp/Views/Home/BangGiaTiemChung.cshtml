@{
    ViewBag.Title = "Bảng Giá Tiêm Chủng Vaccine NATHADA";
    Layout = "~/Views/Shared/Giaodientrangchu.cshtml";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<link href="~/bootstrap/css/Stylehead.css" rel="stylesheet" />
@using Web_TiemChungVaccine.Models
@model List<VACCINE>
<style>
    .justified-text {
        text-align: justify;
    }
    .table-container {
        border-collapse: collapse;
        width: 100%;
        text-align: center;
    }

        .table-container th, .table-container td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        .table-container th {
            background-color: #0077b6;
            color: white;
        }

        .table-container tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table-container td:first-child, .table-container td:nth-child(2) {
            text-align: left;
        }
        .table-container td:nth-child(2) {
            width: 35%;
        }

        .table-container td:nth-child(4) {
            width: 15%;
        }
        .table-container td:nth-child(5) {
            width: 15%;
        }
</style>
<div class="container">
    <div class="row text-center">
        <span>
            <font face="Verdana"> <h2 style="text-align:left; border-bottom: 2px solid #0077b6; margin-bottom:10px;"> <b> Bảng Giá Tiêm Chủng NATHADA</b> </h2> </font>
        </span>
    </div> 
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Phòng bệnh</th>
                    <th>Tên vắc xin</th>
                    <th>Nước sản xuất</th>
                    <th>Bảng giá</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int stt = 1;
                }
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@stt</td>
                        <td>@s.phongbenh</td>
                        <td>@s.ten_vaccine</td>
                        <td>@s.nguongoc</td>
                        <td>@string.Format("{0:n0}", s.gia_vacine) VND</td>
                    </tr>
                    stt++;
                }
            </tbody>
        </table>
    </div>
</div>