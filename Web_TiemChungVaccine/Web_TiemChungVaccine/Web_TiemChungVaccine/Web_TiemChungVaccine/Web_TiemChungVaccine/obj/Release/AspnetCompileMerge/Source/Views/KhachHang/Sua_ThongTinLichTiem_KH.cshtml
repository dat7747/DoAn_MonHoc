@model Web_TiemChungVaccine.Models.NGUOITIEM_DANGKY
@{
    Layout = null;
}

<!DOCTYPE html>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thay đổi thông tin đăng ký tiêm</title>
</head>
<style>
    .form-group {
        margin-bottom: 1.5rem;
        /*text-align:left;
        color:#000000;*/
    }

    .form-control-lg {
        font-size: 1.25rem;
        padding: 0.5rem 1rem;
    }

    .text-danger {
        font-weight: bold;
    }

    .button-luu {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 5px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin: 4px 2px;
        cursor: pointer;
    }

    .button-quaylai {
        display: inline-block;
        background-color: #008CBA;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }

    .button-quaylai-input {
        background-color: transparent;
        border: none;
        color: white;
        font-size: 16px;
        cursor: pointer;
    }

    .button-container {
        text-align: center;
    }

</style>
<body style="background-image:url(/Images/bg_login.jpg); background-size:cover; font-size:16px;color:white">
    @using (Html.BeginForm())
    {
    <div class="container">
        <div id="Wrapper">
            @Html.AntiForgeryToken()
            <div class="form-horizontal" id="form-luu">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ma_dangky)

                <center>
                    <div class="d-flex justify-content-center align-items-center" style="height: 170vh;">
                        <div class="card shadow-lg" style="width: 600px;">
                            <div class="card-body">
                                        <h2 class="text-center mb-4 text-primary">Thông tin tiêm chủng</h2> <hr style="border-color: blue; border-width: 3px;">
                                                                                                            <form>
                                                                                                                <div class="form-group" style="color:#000000; text-align:left;">
                                                                                                                    <label for="hoten_khachhang" class="font-weight-bold">Họ và tên người tiêm: </label>
                                                                                                                    @Html.TextBoxFor(model => model.hoten_nguoitiem, new { @class = "form-control", @id = "hoten_nguoitiem", @placeholder = "Nhập họ và tên", @style = "height: 60px; font-size: 20px; width: 100%;" })
                                                                                                                    @Html.ValidationMessageFor(model => model.hoten_nguoitiem, "", new { @class = "text-danger", @id = "hoten_nguoitiem-error" })
                                                                                                                </div>
                                                                                                                <div class="form-group" style="color:#000000; text-align:left;">
                                                                                                                    <label for="ngaysinh_khachhang" class="font-weight-bold">Ngày sinh:</label>
                                                                                                                    @Html.TextBoxFor(model => model.ngaysinh_nguoitiem, "{0:yyyy-MM-dd}", new { @class = "form-control form-control-lg", @id = "ngaysinh_nguoitiem", @type = "date" })
                                                                                                                    @Html.ValidationMessageFor(model => model.ngaysinh_nguoitiem, "", new { @class = "text-danger", @id = "ngaysinh_nguoitiem-error" })
                                                                                                                </div>

                                                                                                                <div class="form-group" style="color:#000000; text-align:left;">
                                                                                                                    <label for="gioitinh_nguoitiem" class="font-weight-bold">Giới tính:</label>
                                                                                                                    @Html.DropDownListFor(model => model.gioitinh_nguoitiem, new List<SelectListItem>
                                                                                                                    {
                                                                                                                        new SelectListItem { Text = "Nam", Value = "Nam" },
                                                                                                                        new SelectListItem { Text = "Nữ", Value = "Nữ" },
                                                                                                                        new SelectListItem { Text = "Khác", Value = "Khác" }
                                                                                                                    }, new { @class = "form-control form-control-lg", @id = "gioitinh_nguoitiem" })
                                                                                                                    @Html.ValidationMessageFor(model => model.gioitinh_nguoitiem, "", new { @class = "text-danger", @id = "gioitinh_khachhang-error" })
                                                                                                                </div>
                                                                                                                <div class="form-group" style="color:#000000; text-align:left;">
                                                                                                                    <label for="diachi_nguoitiem" class="font-weight-bold">Địa chỉ người tiêm: </label>
                                                                                                                    @Html.TextBoxFor(model => model.diachi_nguoitiem, new { @class = "form-control", @id = "diachi_nguoitiem", @placeholder = "Nhập địa chỉ", @style = "height: 60px; font-size: 20px; width: 100%;" })
                                                                                                                    @Html.ValidationMessageFor(model => model.diachi_nguoitiem, "", new { @class = "text-danger", @id = "diachi_nguoitiem-error" })
                                                                                                                </div>
                                                                                                                <div class="form-group" style="color:#000000; text-align:left;">
                                                                                                                    <label for="hoten_nguoilienhe" class="font-weight-bold">Họ và tên người liên hệ: </label>
                                                                                                                    @Html.TextBoxFor(model => model.hoten_nguoilienhe, new { @class = "form-control", @id = "hoten_nguoilienhe", @placeholder = "Nhập họ và tên người liên hệ", @style = "height: 60px; font-size: 20px; width: 100%;" })
                                                                                                                    @Html.ValidationMessageFor(model => model.hoten_nguoilienhe, "", new { @class = "text-danger", @id = "hoten_nguoitiem-error" })
                                                                                                                </div>
                                                                                                                <div class="form-group" style="color:#000000; text-align:left;">
                                                                                                                    <label for="moiquanhe_nguoitiem" class="font-weight-bold">Mối quan hệ người tiêm:</label>
                                                                                                                    @Html.DropDownListFor(model => model.moiquanhe_nguoitiem, new List<SelectListItem>
                                                                                                                    {
                                                                                                                        new SelectListItem { Text = "Bản thân", Value = "Nam" },
                                                                                                                        new SelectListItem { Text = "Con", Value = "Con" },
                                                                                                                        new SelectListItem { Text = "Cha", Value = "Cha" },
                                                                                                                        new SelectListItem { Text = "Mẹ", Value = "Mẹ" },
                                                                                                                        new SelectListItem { Text = "Vợ", Value = "Vợ" },
                                                                                                                        new SelectListItem { Text = "Chồng", Value = "Chồng" },
                                                                                                                        new SelectListItem { Text = "Anh", Value = "Anh" },
                                                                                                                        new SelectListItem { Text = "Chị", Value = "Chị" },
                                                                                                                        new SelectListItem { Text = "Em trai", Value = "Em trai" },
                                                                                                                        new SelectListItem { Text = "Em gái", Value = "Em gái" },
                                                                                                                        new SelectListItem { Text = "Ông", Value = "Ông" },
                                                                                                                        new SelectListItem { Text = "Bà", Value = "Bà" },
                                                                                                                        new SelectListItem { Text = "Họ hàng", Value = "Họ hàng" },
                                                                                                                        new SelectListItem { Text = "Khác", Value = "Khác" }
                                                                                                                    }, new { @class = "form-control form-control-lg", @id = "moiquanhe_nguoitiem" })
                                                                                                                    @Html.ValidationMessageFor(model => model.moiquanhe_nguoitiem, "", new { @class = "text-danger", @id = "moiquanhe_nguoitiem-error" })
                                                                                                                </div>
                                                                                                                <div class="form-group" style="color:#000000; text-align:left;">
                                                                                                                    <label for="sdt_nguoilienhe" class="font-weight-bold">Số điện thoại người liên hệ: </label>
                                                                                                                    @Html.TextBoxFor(model => model.sdt_nguoilienhe, new { @class = "form-control", @id = "sdt_nguoilienhe", @placeholder = "Nhập số điện thoại người liên hệ", @style = "height: 60px; font-size: 20px; width: 100%;" })
                                                                                                                    @Html.ValidationMessageFor(model => model.sdt_nguoilienhe, "", new { @class = "text-danger", @id = "sdt_nguoilienhe-error" })
                                                                                                                </div>
                                                                                                                <div class="form-group" style="color:#000000; text-align:left;">
                                                                                                                    <label for="ngay_muontiem" class="font-weight-bold">Ngày muốn tiêm:</label>
                                                                                                                    @Html.TextBoxFor(model => model.ngay_muontiem, "{0:yyyy-MM-dd}", new { @class = "form-control form-control-lg", @id = "ngay_muontiem", @type = "date" })
                                                                                                                    @Html.ValidationMessageFor(model => model.ngay_muontiem, "", new { @class = "text-danger", @id = "ngay_muontiem-error" })
                                                                                                                </div>
                                                                                                                <div class="checkError">
                                                                                                                    @Html.ValidationSummary()
                                                                                                                </div>
                                                                                                                <div class="form-group">
                                                                                                                    <div class="col-md-offset-2 col-md-10">
                                                                                                                        <input type="submit" value="Lưu" class="button-luu" style="width: 30%; height: 30px;" />
                                                                                                                    </div>
                                                                                                                </div>
                                                                                                                <br />
                                                                                                                <div class="button-container">
                                                                                                                    <a href="javascript:history.back()" class="button-quaylai">
                                                                                                                        <input type="button" value="Quay Lại" class="button-quaylai-input" />
                                                                                                                    </a>
                                                                                                                </div>
                                                                                                                <!-- Div to show the toast message -->
                                                                                                                <div id="toast" class="toast"></div>
                                                                                                                <script>
                                                                                                                    document.querySelector('form').addEventListener('submit', function (event) {
                                                                                                                        // Lấy giá trị của các trường bắt buộc
                                                                                                                        var hoTenNT = document.getElementById('hoten_nguoitiem').value.trim();
                                                                                                                        var ngaySinh = document.getElementById('ngaysinh_nguoitiem').value.trim();
                                                                                                                        var gioiTinh = document.getElementById('gioitinh_nguoitiem').value;
                                                                                                                        var diachiNT = document.getElementById('diachi_nguoitiem').value.trim();
                                                                                                                        var hoTenNLHT = document.getElementById('hoten_nguoilienhe').value.trim();
                                                                                                                        var mqhNT = document.getElementById('moiquanhe_nguoitiem').value;
                                                                                                                        var sdtNLH = document.getElementById('sdt_nguoilienhe').value.trim();
                                                                                                                        var ngayMuonTiem = document.getElementById('ngay_muontiem').value.trim();

                                                                                                                        // Kiểm tra xem các trường bắt buộc đã được nhập đầy đủ chưa
                                                                                                                        if (hoTenNT === '' || ngaySinh === '' || gioiTinh === '' || diachiNT === '' || hoTenNLHT === '' || mqhNT === '' || sdtNLH === '' || ngayMuonTiem === '') {
                                                                                                                            // Tạo và hiển thị toast thông báo lỗi
                                                                                                                            showToast('Vui lòng nhập đầy đủ thông tin.', '#dc3545');
                                                                                                                            event.preventDefault();
                                                                                                                        } else if (sdtNLH.length < 10 || sdtNLH.length > 11) {
                                                                                                                            // Tạo và hiển thị toast thông báo lỗi nếu số điện thoại không hợp lệ
                                                                                                                            showToast('Số điện thoại phải có từ 10 đến 11 chữ số.', '#dc3545');
                                                                                                                            event.preventDefault();
                                                                                                                        } else {
                                                                                                                            // Kiểm tra xem ngày sinh có hợp lệ không
                                                                                                                            var currentDate = new Date();
                                                                                                                            var birthDate = new Date(ngaySinh);
                                                                                                                            var muonTiemDate = new Date(ngayMuonTiem);
                                                                                                                            if (birthDate > currentDate) {
                                                                                                                                // Tạo và hiển thị toast thông báo lỗi
                                                                                                                                showToast('Ngày sinh phải nhỏ hơn ngày hiện tại.', '#dc3545');
                                                                                                                                event.preventDefault();
                                                                                                                            } else if (muonTiemDate <= currentDate) {
                                                                                                                                // Tạo và hiển thị toast thông báo lỗi nếu ngày muốn tiêm không hợp lệ
                                                                                                                                showToast('Ngày muốn tiêm phải lớn hơn ngày hiện tại.', '#dc3545');
                                                                                                                                event.preventDefault();
                                                                                                                            } else {
                                                                                                                                // Tạo và hiển thị toast thông báo thành công
                                                                                                                                showToast('Thay đổi thông tin lịch tiêm chủng thành công', '#28a745');
                                                                                                                            }
                                                                                                                        }
                                                                                                                    });

                                                                                                                    function showToast(message, backgroundColor) {
                                                                                                                        var toastElement = document.createElement('div');
                                                                                                                        toastElement.className = 'toast show';
                                                                                                                        toastElement.style.position = 'fixed';
                                                                                                                        toastElement.style.top = '20px';
                                                                                                                        toastElement.style.right = '20px';
                                                                                                                        toastElement.style.backgroundColor = backgroundColor;
                                                                                                                        toastElement.style.color = '#fff';
                                                                                                                        toastElement.style.padding = '10px 20px';
                                                                                                                        toastElement.style.borderRadius = '5px';
                                                                                                                        toastElement.style.zIndex = '9999';
                                                                                                                        toastElement.innerHTML = '<i class="fas fa-' + (backgroundColor === '#dc3545' ? 'times-circle' : 'check-circle') + '"></i> ' + message;
                                                                                                                        document.body.appendChild(toastElement);

                                                                                                                        setTimeout(function () {
                                                                                                                            toastElement.remove();
                                                                                                                        }, 5000);
                                                                                                                    }

                                                                                                                </script>
                                                                                                            </form>
                                    </div>
                                </div>
                            </div>
                </center>
                <br />

            </div>
        </div>
    </div>
    }
</body>
</html>
