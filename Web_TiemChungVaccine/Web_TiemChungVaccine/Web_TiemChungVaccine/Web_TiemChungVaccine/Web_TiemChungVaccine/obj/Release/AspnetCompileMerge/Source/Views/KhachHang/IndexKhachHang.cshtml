@{
    ViewBag.Title = "Tiêm Chủng Vaccine NATHADA";
    Layout = "~/Views/Shared/GiaodientrangchuGioHang.cshtml";
}

@using Web_TiemChungVaccine.Models
@model List<VACCINE>
<div class="container">
    <div class="row text-center" style="margin-top:20px; margin-bottom:20px;">
        <div class="col-12">
            <div style="border-radius: 4px; background-color: #3c5ae4; color: white; padding: 20px;">
                <h2 style="text-align:center; font-family: Verdana, sans-serif; font-weight: bold;"><i class="fas fa-syringe"></i> DANH MỤC VACCINE <i class="fas fa-syringe"></i></h2>
            </div>
        </div>
    </div>
    @if (ViewBag.Message != null)
    {
        <p style="font-family: 'Times New Roman', serif; font-size: 35px; font-weight: bold; text-align: center; color:black;">@ViewBag.Message</p>
    }
    else
    {
        <div class="row ">
            <div class="row product-group p-3 bg-light">
                @foreach (var s in Model)
                {
                    <div class="col-4 p-3">
                        <a href="/Home/XemChiTietVaccine/@s.ma_vaccine" style="text-decoration: none;">
                            <div class="card-container text-center">
                                <div class="card">
                                    <div style="box-shadow: 5px 5px 5px 2px #999999; height: 380px; position: relative;">
                                        <img class="hover-row card-img-top" src="~/Images/@s.anh_vaccine" height="200" />
                                        <div class="card-body">
                                            <h6 class="card-title text-center"><b>@s.ten_vaccine (@s.nguongoc)</b></h6>
                                        </div>
                                        <div class="card-text">
                                            <a href="/KhachHang/XemChiTietVaccine_KH/@s.ma_vaccine" style="position: absolute; bottom: 5%;right:10%;"><button class="btn btn-primary mt-3" style="width:300px;"><img src="~/Images/vaccine_xemchitiet.png" width="30px" /><b>XEM CHI TIẾT</b></button></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>

                    </div>

                }
            </div>

        </div>
    }
    </div>
