@{
    ViewBag.Title = "Danh sách Voucher";
    Layout = "~/Views/Shared/GiaodientrangchuGioHang.cshtml";
}

@using Web_TiemChungVaccine.Models
@model List<VOUCHER>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<link href="~/bootstrap/css/Stylehead.css" rel="stylesheet" />
<div class="container">
    <div class="row text-center" style="margin-top:20px; margin-bottom:20px;">
        <div class="col-12">
            <div style="border-radius: 4px; background-color: #3c5ae4; color: white; padding: 20px;">
                <h2 style="text-align:center; font-family: Verdana, sans-serif; font-weight: bold;"><i class="fa fa-gift" aria-hidden="true"></i> Voucher <i class="fa fa-gift" aria-hidden="true"></i></h2>
            </div>
        </div>
    </div>
    @if (ViewBag.Message != null)
    {
        <p style="font-family: 'Times New Roman', serif; font-size: 35px; font-weight: bold; text-align: center; color:black;">@ViewBag.Message</p>
    }
    else
    {
        <div class="row ">
            <div class="row product-group p-3 bg-light">
                @foreach (var s in Model)
                {
                    if (s.ngayketthuc_voucher >= DateTime.Today)
                    {
                        <div class="col-4 p-3" style="margin-bottom:30px; margin-top:30px;">
                            <a style="text-decoration: none;">
                                <div class="card-container text-center">
                                    <div class="card">
                                        <div style="box-shadow: 5px 5px 5px 2px #999999; height: 130px; position: relative;">
                                            <div class="row">
                                                <div class="col-4 d-flex justify-content-center align-items-center">
                                                    <img class="hover-row card-img-top" src="~/Images/logo_voucher.png" height="100px" />
                                                </div>
                                                <div class="col-8">
                                                    <div style="position: absolute; top: 0; right: 0; background-color: red; color: white; padding: 5px; font-weight: bold;">New</div>

                                                    <div class="card-body">
                                                        <h6 class="card-title text-justify" style="font-size: 1em;"><b>@s.ten_voucher</b></h6>
                                                        <h6 class="card-title text-justify" style="font-size: 0.8em;"><b>Có hiệu lực từ: @s.ngaybatdau_voucher.ToString("dd/MM/yyyy")</b></h6>
                                                        <h6 class="card-title text-justify" style="font-size: 0.8em;"><b>Hạn sử dụng: @s.ngayketthuc_voucher.ToString("dd/MM/yyyy")</b></h6>
                                                        <h6 class="card-title text-justify" style="font-size: 1em; background-color: #007bff; color: #fff; padding: 5px 10px; border-radius: 5px; display: inline-block;"><b>MÃ VOUCHER: @s.ma_voucher</b></h6>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>

                    }
                }
            </div>
        </div>
    }
</div>
