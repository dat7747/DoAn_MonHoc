@{
    ViewBag.Title = "Tra cứu lịch sử tiêm";
    Layout = "~/Views/Shared/GiaodienTraCuuThu2.cshtml";
}

@using Web_TiemChungVaccine.Models
@model List<TIEMVACCINE_MUI>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<link href="~/bootstrap/css/Stylehead.css" rel="stylesheet" />
<link href="~/bootstrap/css/Style_LichSuTiem.css" rel="stylesheet" />
<div class="row text-center">
    <h2 style="text-align:center; margin-bottom:15px;" class="text-head">
        <i class="fa fa-address-book" aria-hidden="true" style="margin-right: 10px;"></i>
        <b>HỒ SƠ TIÊM CHỦNG</b>
    </h2>
    <div class="container" style="display: flex; justify-content: center;">
        @if (Model != null && Model.Count > 0)
        {
            <div class="row ">
                <div class="">
                    @foreach (var s in Model)
                    {
                        <div class="row">
                            <div class="col-12 p-3">
                                <a style="text-decoration: none;">
                                    <div class="card-container d-flex">
                                        <div class="card w-100">
                                            <div class="row align-items-center" style="box-shadow: 5px 5px 5px 2px #999999; height: 200px; position: relative; width:900px;">
                                                <div class="row" style="text-align:center;">
                                                    <div class="col-2 card-body taovien">
                                                        <h6 class="card-title text-center bgtieudechinh"><b>Mã đăng ký</b></h6>
                                                        <h6 class="card-title text-center" style="color:black;"><b>@s.ma_dangky</b></h6>
                                                    </div>
                                                    <div class="col-2 card-body taovien">
                                                        <h6 class="card-title text-center bgtieude"><b>Vaccine</b></h6>
                                                        <h6 class="card-title text-center" style="color:black;"><b>@s.ma_vaccine</b></h6>
                                                    </div>
                                                    <div class="col-2 card-body taovien">
                                                        <h6 class="card-title text-center bgtieude"><b>Mã combo</b></h6>
                                                        <h6 class="card-title text-center" style="color:black;"><b>@s.ma_combo </b></h6>
                                                    </div>
                                                    <div class="col-1 card-body taovien">
                                                        <h6 class="card-title text-center bgtieude"><b>Mũi vaccine</b></h6>
                                                        <h6 class="card-title text-center" style="color:black;"><b>@s.mui_vaccine</b></h6>
                                                    </div>
                                                    <div class="col-2 card-body taovien">
                                                        <h6 class="card-title text-center bgtieude" style=""><b>Tình trạng</b></h6>
                                                        <h6 class="card-title text-center" style="color:black;">
                                                            <b>
                                                                @if (@s.da_tiem == null || @s.da_tiem == false)
                                                                {
                                                                    <text>Chưa tiêm</text>
                                                                }
                                                                else
                                                                {
                                                                    <text>Đã tiêm</text>
                                                                }
                                                            </b>
                                                        </h6>
                                                    </div>
                                                    <div class="col-1 card-body taovien">
                                                        <h6 class="card-title text-center bgtieudechinh"><b>STT</b></h6>
                                                        <h6 class="card-title text-center" style="color:black;"><b>@s.STT</b></h6>
                                                    </div>
                                                    <div class="col-2 card-body taovien">
                                                        <h6 class="card-title text-center bgtieude"><b>Ngày tiêm</b></h6>
                                                        <h6 class="card-title text-center" style="color:black;">
                                                            <b>@String.Format("{0:dd/MM/yyyy}", s.ngay_tiem)</b>
                                                        </h6>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-12" style="margin-top: 50px; margin-bottom: 50px;">
                    <p style="font-family: 'Times New Roman', serif; font-size: 35px;">Không có dữ liệu.</p>
                </div>
            </div>
        }
    </div>
</div>
